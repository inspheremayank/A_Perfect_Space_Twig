{% set popularArticles = _Article.getPopularArticles({ limit: 3, excludeArticleIds : articleId }) %}
<div class="article__main-related {% if popularArticles|length <= 0 %} hide {% endif %}">
    <h2>Related Spaces</h2>
</div>
{% if popularArticles|length > 0 %}
    <div class="card__view styles__2">
        <div class="row">
            {% set i = 1 %}
            {% for article in popularArticles %}
                {{this.render('../_single-article.twig', {article: article, 'position': i, class: 'col-12 col-md-6 col-lg-3'}) | raw}}
                {% set i = i+1 %}
            {% endfor %}
        </div>
    </div>
{% endif %}
