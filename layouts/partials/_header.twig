{% set user = '' %}
{% if not _User.isGuest()%}
    {% set user = _User.getUser()%}
{% endif %}
<header class="header">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="header__section d-flex align-items-center">
                    <div class="header__section-logo">
                        {% set logo = network.templatePath~'/static/images/themeLogo.svg'%}
                        {% set logoUrl = network.networkLogoLinkUrl %}
                        {% if network.logoMedia | length > 0 %}
                            {% set logo = _Media.getMediaUrl(network.logoMedia, 177, 65, {'crop': 'limit'} )%}
                        {% endif %}
                        <a href="{{logoUrl}}">
                            <img src="{{logo}}" alt="Logo" />
                        </a>
                    </div>
                    <div class="header__section-navigation d-flex justify-content-end">
                        <div class="navigation__main d-flex align-items-center">
                            <ul>
                                {% set menuItems = blogData.blogHeaderMenu %}
                                {% for i in 0..4 %}
                                    {% if menuItems[i] is defined %}
                                        {% set activeClass = (menuItems[i].link == _AppHelper.getServerUrl()) ? 'active' : ''%}
                                        {% set externalClass = (menuItems[i].isExternal) ? 'external-link' : '' %}
                                        {% set hasChildren = menuItems[i].children is defined and menuItems[i].children | length > 0 ? true : false %} 

                                        {% if hasChildren %}
                                            <li class="dropdown channel-{{menuItems[i].id}}">
                                                <a href="javascript:;">
                                                    {{ ((menuItems[i].label is empty) ? ((menuItems[i].pageTitle is empty)? menuItems[i].blogTitle : menuItems[i].pageTitle) : menuItems[i].label )}}  <i class="fa fa-angle-down"></i>
                                                </a>
                                                <ul class="sub-menu">
                                                    {% for childItem in menuItems[i].children%}
                                                        {% set externalClass = (childItem.isExternal) ? 'external-link' : '' %}
                                                        {% set name = ((childItem.label is empty) ? ((childItem.pageTitle is empty)? childItem.blogTitle : childItem.pageTitle) : childItem.label) %}
                                                        <li>
                                                            <a href="{{childItem.link |raw}}" class="{{externalClass}}"  {% if childItem.target != "" %}target="{{childItem.target}}"{% endif %}>{{ name }}</a>
                                                        </li>
                                                    {% endfor %}
                                                </ul>
                                            </li>
                                        {% else %}
                                            <li class="channel-{{menuItems[i].id}}">
                                                <a href="{{menuItems[i].link |raw}}" class="{{activeClass}} {{externalClass}}" {% if menuItems[i].target != "" %}target="{{menuItems[i].target}}"{% endif %}>{{ ((menuItems[i].label is empty) ? ((menuItems[i].pageTitle is empty)? menuItems[i].blogTitle : menuItems[i].pageTitle) : menuItems[i].label )}} </a>
                                            </li>
                                        {% endif %}
                                    {% endif %}
                                {% endfor %}
                                {% if menuItems[5] is defined %}
                                    <li class="more-menu">
                                        <a href="javscript:;">More <i class="fa fa-angle-down"></i></a>
                                        <ul class="sub-menu sub-menu-right">
                                            {% for i in 5..(menuItems |length - 1)%}
                                                {% set menuItem = menuItems[i] %}									
                                                {% if menuItems[i].children is defined and menuItems[i].children | length > 0 %}
                                                    <li>
                                                        <a href="javascript:;">{{ ((menuItem.label is empty) ? ((menuItem.pageTitle is empty)? menuItem.blogTitle : menuItem.pageTitle) : menuItem.label )}}<i class="fa fa-angle-right"></i></a>
                                                        <ul class="sub-sub-menu">
                                                            {% for childItem in menuItems[i].children%}
                                                                {% set externalClass = (childItem.isExternal) ? 'external-link' : '' %}
                                                                {% set name = ((childItem.label is empty) ? ((childItem.pageTitle is empty)? childItem.blogTitle : childItem.pageTitle) : childItem.label) %}
                                                                <li>
                                                                    <a href="{{childItem.link |raw}}" class="{{externalClass}}" {% if childItem.target != "" %}target="{{childItem.target}}"{% endif %}> {{ name }}</a>
                                                                </li>
                                                            {% endfor %}
                                                        </ul>
                                                    </li>
                                                {% else %}
                                                    <li>
                                                        <a href="{{ menuItem.link }}" class="">{{ ((menuItem.label is empty) ? ((menuItem.pageTitle is empty)? menuItem.blogTitle : menuItem.pageTitle) : menuItem.label )}}</a>
                                                    </li>
                                                {% endif %}
                                            {% endfor %}
                                        </ul>
                                    </li>
                                {% endif %}
                            </ul>
                        </div>
                        <div class="navigation__user">
                            <div class="open-menu">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="item-1"></span>
                                <span class="item-2"></span>
                                <span class="item-3"></span>
                            </div>
                            <ul class="navigation__user-login d-none">
                                <li><a href="javascript:;">Sign Up</a></li>
                                <li><a href="javascript:;">Login</a></li>
                            </ul>
                            <div class="navigation__user-loginProfile">
                                <div class="navigation__user-loginProfile-image image-covered rounded-circle" data-toggle="dropdown" style="background-image: url('dist/images/avtar.png');"></div>
                                <div class="dropdown-menu dropdown-menu-right">
                                    <a class="dropdown-item" href="#">Action</a>
                                    <a class="dropdown-item" href="#">Another action</a>
                                    <a class="dropdown-item" href="#">Something else here</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Begin Responsive Profile -->
    <div class="responsive-standalone">
        <a href="javascript:;" class="responsive-standalone-close"><span class="close-text">Close</span><span class="fa fa-close" aria-hidden="true"></span></a>
        <div class="standalone-menu"></div>
    </div>
    <div class="responsive-standalone-overlay"></div>
    <!-- //End Responsive Profile -->
</header>